<div class="page-width">
  <div class=" text-sm text-gray-800 h-[40px] flex justify-between items-center">
    <!-- Left: Contact -->
    <div class="w-2/3 md:w-1/4 flex justify-start items-center gap-1 ml-4">
      <span class="text-gray-700 font-normal text-[12px]">{{ section.settings.contact_text }}</span>
      <span class="text-gray-700 font-semibold text-[12px]">{{ section.settings.contact_phone }}</span>
    </div>

    <!-- Center: Announcement -->
    <div class="header-top__center w-2/4 flex justify-center items-center text-gray-700 font-normal text-[12px]">
      {{ section.settings.announcement }}
    </div>

    <!-- Right: Wishlist & Account -->
    <div class="w-1/3 md:w-1/4 flex justify-end items-center gap-4 text-gray-700 font-normal text-[12px] mr-4">
      <a href="/pages/wishlist" class="hover:underline">Wishlist</a>
      <a href="/account" class="hover:underline">Account</a>
    </div>
  </div>
</div>
<style>
   @media (max-width: 768px) {
    .header-top__center {
      display: none;
    }
   }
</style>
{% schema %}
{
  "name": "Header Top",
  "tag": "section",
  "class": "header-top",
  "settings": [
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact text",
      "default": "Contact us 24/7"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Phone number",
      "default": "+1 50 537 53 082"
    },
    {
      "type": "text",
      "id": "announcement",
      "label": "Announcement",
      "default": "ðŸ”¥ The Biggest Sale Ever 50% Off"
    }
  ],
  "enabled_on": {
    "groups": ["header"]
  }
}
{% endschema %}
