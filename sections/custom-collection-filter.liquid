<div class="collection-filters flex flex-wrap gap-4 mb-6">
  <div>
    <select class="border px-4 py-2 rounded">
      <option>Most popular</option>
      <option>Newest</option>
      <option>Price: Low to High</option>
      <option>Price: High to Low</option>
    </select>
  </div>

  <div>
    <button class="border px-4 py-2 rounded">Category ({{ collection.tags.size }})</button>
    <!-- You could use JavaScript or Metafields to show checkboxes or pills dynamically -->
  </div>

  <div>
    <select class="border px-4 py-2 rounded">
      <option>Type</option>
    </select>
  </div>

  <div>
    <select class="border px-4 py-2 rounded">
      <option>Price</option>
    </select>
  </div>

  <div>
    <select class="border px-4 py-2 rounded">
      <option>Color</option>
    </select>
  </div>

  <div>
    <button class="text-blue-600">More +</button>
  </div>

  <div class="w-full mt-2 flex flex-wrap gap-2">
    <!-- Example tags, dynamically rendered -->
    {% for tag in collection.tags %}
      <span class="bg-gray-200 px-3 py-1 rounded-full text-sm">{{ tag }}</span>
    {% endfor %}
    <a href="{{ collection.url }}" class="text-red-500 ml-4">Clear all</a>
  </div>
</div>
