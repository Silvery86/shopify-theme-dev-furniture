{% comment %}
  Renders product color variant-picker

  Accepts:
  - product: {Object} product object.
  - product_form_id: {String} Id of the product form to which the variant picker is associated.
  - swatch_color_only: Render only color swatch
  Usage:
  {% render 'product-color-picker', product: product, product_form_id: product_form_id %}
{% endcomment %}
{%- unless product.has_only_default_variant -%}
  <variant-selects
    id="variant-selects-{{ section.id }}-{{ product.id }}"
    data-section="{{ section.id }}"
    {{ block.shopify_attributes }}
  >
    {%- for option in product.options_with_values -%}
      {%- liquid
        assign swatch_count = option.values | map: 'swatch' | compact | size
        if swatch_count > 0
          assign picker_type = 'swatch'
        else
          assign picker_type = 'button'
        endif
      -%}
      {%- if swatch_color_only and picker_type == 'swatch' -%}
        <fieldset class="js product-form__input product-form__input--swatch">
          {%- for value in option.values -%}
            {%- if value.swatch.color -%}
              {%- liquid
                assign swatch_focal_point = null
                if value.swatch.image
                  assign image_url = value.swatch.image | image_url: width: 50
                  assign swatch_value = 'url(' | append: image_url | append: ')'
                  assign swatch_focal_point = value.swatch.image.presentation.focal_point
                elsif value.swatch.color
                  assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
                else
                  assign swatch_value = null
                endif

                assign option_disabled = true
                if value.available
                  assign option_disabled = false
                endif
              -%}

              {%- capture input_id -%}
              {{ section.id }}-{{ option.position }}-{{ forloop.index0 }}-{{ product.id }}
              {%- endcapture -%}

              {%- capture input_name -%}
              Color-{{ option.position }}-{{ product.id }}
              {%- endcapture -%}

              {%- capture input_dataset -%}
              data-product-id="{{ product.id }}"
              data-option-value-id="{{ value.id }}"
              data-image-url="{{ value.variant.featured_image | image_url: width: 300 }}"
              {%- endcapture -%}

              {%- capture label_unavailable -%}
        <span class="visually-hidden label-unavailable">
          {{- 'products.product.variant_sold_out_or_unavailable' | t -}}
        </span>
        {%- endcapture -%}
              {%- capture help_text -%}
        <span class="visually-hidden">{{ value | escape }}</span>
        {{ label_unavailable }}
        {%- endcapture -%}

              {%
                render 'swatch-input',
                id: input_id,
                name: input_name,
                value: value | escape,
                swatch: value.swatch,
                product_form_id: product_form_id,
                checked: value.selected,
                visually_disabled: option_disabled,
                shape: block.settings.swatch_shape,
                help_text: help_text,
                additional_props: input_dataset
              %}
            {%- endif -%}
          {% endfor %}
        </fieldset>
      {%- elsif swatch_color_only == false and picker_type == 'swatch' -%}
        <fieldset class="js product-form__input product-form__input--swatch">
          {%- for value in option.values -%}
            {%- liquid
              assign swatch_focal_point = null
              if value.swatch.image
                assign image_url = value.swatch.image | image_url: width: 50
                assign swatch_value = 'url(' | append: image_url | append: ')'
                assign swatch_focal_point = value.swatch.image.presentation.focal_point
              elsif value.swatch.color
                assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
              else
                assign swatch_value = null
              endif

              assign option_disabled = true
              if value.available
                assign option_disabled = false
              endif
            -%}

            {%- capture input_id -%}
            {{ section.id }}-{{ option.position }}-{{ forloop.index0 }}-{{ product.id }}
            {%- endcapture -%}

            {%- capture input_name -%}
            Color-{{ option.position }}-{{ product.id }}
            {%- endcapture -%}

            {%- capture input_dataset -%}
            data-product-id="{{ product.id }}"
            data-option-value-id="{{ value.id }}"
            data-image-url="{{ value.variant.featured_image | image_url: width: 300 }}"
            {%- endcapture -%}

            {%- capture label_unavailable -%}
      <span class="visually-hidden label-unavailable">
        {{- 'products.product.variant_sold_out_or_unavailable' | t -}}
      </span>
      {%- endcapture -%}
            {%- capture help_text -%}
      <span class="visually-hidden">{{ value | escape }}</span>
      {{ label_unavailable }}
      {%- endcapture -%}

            {%
              render 'swatch-input',
              id: input_id,
              name: input_name,
              value: value | escape,
              swatch: value.swatch,
              product_form_id: product_form_id,
              checked: value.selected,
              visually_disabled: option_disabled,
              shape: block.settings.swatch_shape,
              help_text: help_text,
              additional_props: input_dataset
            %}
          {% endfor %}
        </fieldset>
      {%- elsif swatch_color_only == false and picker_type == 'button' -%}
        <fieldset class="js product-form__input product-form__input--pill">
          <legend class="form__label">{{ option.name }}</legend>
          {% render 'product-variant-options',
            product: product,
            option: option,
            block: block,
            picker_type: picker_type
          %}
        </fieldset>
      {%- elsif swatch_color_only == false -%}
        <div class="product-form__input product-form__input--dropdown">
          <label class="form__label" for="Option-{{ section.id }}-{{ forloop.index0 }}">
            {{ option.name }}
          </label>
          <div class="select">
            {%- if picker_type == 'swatch_dropdown' -%}
              <span
                data-selected-value
                class="dropdown-swatch"
              >
                {% render 'swatch', swatch: option.selected_value.swatch, shape: block.settings.swatch_shape %}
              </span>
            {%- endif -%}
            <select
              id="Option-{{ section.id }}-{{ forloop.index0 }}"
              class="select__select"
              name="options[{{ option.name | escape }}]"
              form="{{ product_form_id }}"
            >
              {% render 'product-variant-options',
                product: product,
                option: option,
                block: block,
                picker_type: picker_type
              %}
            </select>
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </div>
        </div>
      {%- endif -%}
    {%- endfor -%}

    <script type="application/json" data-selected-variant>
      {{ product.selected_or_first_available_variant | json }}
    </script>
  </variant-selects>
{%- endunless -%}
